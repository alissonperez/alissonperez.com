/*general*/
*
  font-family 'Helvetica', 'Verdana'
  box-sizing border-box

body
  height 100vh
  position relative
  margin 0
  padding 0
  color #BBB
  background-color lighten(#FF0, 95%)

a
  text-decoration none

  &:hover
    text-decoration underline

section
  text-align center
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)
  -moz-transform translate(-50%, -50%)

  h1
    font-size 80px
    margin 50px 0 0

  span a
    color #AAA
    font-size 20px
